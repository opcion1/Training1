@model Training1.Models.Product

@{
    ViewData["Title"] = "Create";
}
    <div class="d-inline-flex">
        <img src="~/images/vegetable.jpg" class="mr-3 rounded-circle" style="width:60px;">
        <h1>Create Product</h1>
    </div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="Category" asp-items="Enum<ProductCategory>.FriendlyNames" class="form-control"></select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" spellcheck="false" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group d-flex row mx-1">
                <input type="submit" value="Create" class="btn btn-primary mr-auto" />
                <a asp-action="Index" class="btn btn-secondary"><text> << </text>Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
