@model PaginationViewModel


@{
}

@if (Model.NumberOfPage > 1)
{
    <ul class="pagination">
        <li class="page-item @(@Model.CurrentPage == 1 ? "disabled" : "") "><a class="page-link" asp-controller="@Model.ControllerName" asp-action="@Model.ActionName" asp-route-indexPage="@(@Model.CurrentPage - 1)" asp-route-searchOrFilter="@Model.SearchOrFilter" asp-route-sortOrder="@Model.SortOrder">Previous</a></li>
        @for (int idxPage = 1; idxPage <= Model.NumberOfPage; idxPage++)
        {
            <li class="page-item @(@Model.CurrentPage == @idxPage ? "active" : "")"><a class="page-link" asp-controller="@Model.ControllerName" asp-action="@Model.ActionName" asp-route-indexPage="@idxPage" asp-route-searchOrFilter="@Model.SearchOrFilter" asp-route-sortOrder="@Model.SortOrder">@idxPage</a></li>
        }
        <li class="page-item"><a class="page-link @(@Model.CurrentPage == @Model.NumberOfPage ? "disabled" : "")" asp-controller="@Model.ControllerName" asp-action="@Model.ActionName" asp-route-indexPage="@(@Model.CurrentPage + 1)" asp-route-searchOrFilter="@Model.SearchOrFilter" asp-route-sortOrder="@Model.SortOrder">Next</a></li>
    </ul>

}
