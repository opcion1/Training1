@model PaginationViewModel


@{
    ProductCategory? category;
    NullableEnum.TryParse<ProductCategory>(Model.CategoryFilter, out category);
}

@if (Model.NumberOfPage > 1)
{
    <ul class="pagination">
        <li class="page-item @(@Model.CurrentPage == 1 ? "disabled" : "") "><a class="page-link" asp-controller="@Model.ControllerName" asp-action="@Model.ActionName" asp-route-indexPage="@(@Model.CurrentPage - 1)" asp-route-category="@category">Previous</a></li>
        @for (int idxPage = 1; idxPage <= Model.NumberOfPage; idxPage++)
        {
            <li class="page-item @(@Model.CurrentPage == @idxPage ? "active" : "")"><a class="page-link" asp-controller="@Model.ControllerName" asp-action="@Model.ActionName" asp-route-indexPage="@idxPage" asp-route-category="@category">@idxPage</a></li>
        }
        <li class="page-item"><a class="page-link @(@Model.CurrentPage == @Model.NumberOfPage ? "disabled" : "")" asp-controller="@Model.ControllerName" asp-action="@Model.ActionName" asp-route-indexPage="@(@Model.CurrentPage + 1)" asp-route-category="@category">Next</a></li>
    </ul>

}
