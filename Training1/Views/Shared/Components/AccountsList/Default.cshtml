@model AccountListViewModel

@{
    ViewData["Title"] = "User's administration";
    Layout = null;
}

<div style="padding-top:10px;padding-bottom:10px">
    <form class="form-inline my-2 my-lg-0" asp-action="Index" asp-controller="Accounts">
        <input type="hidden" name="tab" value="Accounts" />
        <input class="form-control mr-sm-2" type="text" placeholder="Search" name="searchStr" value="@Model.SearchStr" />
        <button class="btn btn-primary my-2 my-sm-0" type="submit">Search</button>
    </form>
</div>
<div class="table-responsive">
    <table class="table table-striped table-dark">
        <thead>
            <tr class="table-primary">
                <th>
                    @Html.DisplayNameFor(model => model.Users.First().Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Users.First().FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Users.First().Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Users.First().AccountStatus)
                </th>
                <th>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (AppUser user in Model.Users)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => user.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => user.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => user.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => user.AccountStatus)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-controller="Accounts" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

