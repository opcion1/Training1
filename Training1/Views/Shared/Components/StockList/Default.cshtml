@model IEnumerable<Training1.Models.Stock>

@{
    Layout = null;
}


<p>
    @if ((await AuthorizationService.AuthorizeAsync(
         User, Model,
         UserOperations.Create)).Succeeded)
    {
        <a asp-controller="Stocks" asp-action="Create" class="btn btn-primary">Create New</a>
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnityType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PricePorUnity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Currency)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CommandDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnityType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PricePorUnity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Currency)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CommandDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                <td>
                    @if ((await AuthorizationService.AuthorizeAsync(
                      User, item,
                      UserOperations.Update)).Succeeded)
                    {
                        <a asp-controller="Stocks" asp-action="Edit" asp-route-id="@item.StockId" class="btn btn-primary">Edit</a>
                    }
                    @if ((await AuthorizationService.AuthorizeAsync(
                   User, item,
                   UserOperations.Read)).Succeeded)
                    {
                        <a asp-controller="Stocks" asp-action="Details" asp-route-id="@item.StockId" class="btn btn-primary">Details</a>
                    }
                    @if ((await AuthorizationService.AuthorizeAsync(
                     User, item,
                     UserOperations.Delete)).Succeeded)
                    {
                        <a asp-controller="Stocks" asp-action="Delete" asp-route-id="@item.StockId" class="btn btn-primary">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
