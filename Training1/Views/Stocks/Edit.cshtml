@model Training1.Models.Stock

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="d-inline-flex align-items-center">
        <i class="fas fa-pen fa-2x btn btn-primary mr-2"></i>
        <h1 class="mt-2">Edit Command</h1>
    </div>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="StockId" type="hidden" />
            <input asp-for="ProductId" type="hidden" />
            <input asp-for="CommandDate" type="hidden" />
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" id="quantity" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnityType" class="control-label"></label>
                <select asp-for="UnityType" class="form-control" asp-items="Html.GetEnumSelectList<UnityType>()"></select>
                <span asp-validation-for="UnityType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PricePorUnity" class="control-label"></label>
                <input asp-for="PricePorUnity" class="form-control" id="pricePorUnity" />
                <span asp-validation-for="PricePorUnity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Currency" class="control-label"></label>
                <select asp-for="Currency" class="form-control" asp-items="Enum<Currency>.FriendlyNames"></select>
                <span asp-validation-for="Currency" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalPrice" class="control-label"></label>
                <input asp-for="TotalPrice" class="form-control" id="totalPrice" readonly />
                <span asp-validation-for="TotalPrice" class="text-danger"></span>
            </div>
            <div class="form-group d-flex row mx-1">
                <input type="submit" value="Save" class="btn btn-primary mr-auto" />
                <a asp-action="Details" asp-controller="Products" asp-route-id="@Model.ProductId" class="btn btn-secondary"><text> << </text>Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <environment include="Development">
        <script src="~/js/stock.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/stock.min.js"></script>
    </environment>
}
