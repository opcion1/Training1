@model Training1.Models.Stock

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = $"Are you sure you want to delete the {Model.Product.Name} command of the {Model.CommandDate.ToLongDateString()}?";
}


<h3>@title</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity) <text> </text> @Html.DisplayFor(model => model.UnityType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PricePorUnity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PricePorUnity) <text> </text> @Html.DisplayFor(model => model.UnityType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalPrice) <text> </text> @Html.DisplayFor(model => model.Currency)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="StockId" />
        <input type="hidden" asp-for="ProductId" />
        <input type="submit" value="Delete" class="btn btn-primary" /> |
        <a asp-action="Details" asp-controller="Products" asp-route-id="@Model.ProductId" asp-route-showStock="true">Back to List</a>
    </form>
</div>
