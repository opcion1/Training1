@model IEnumerable<Training1.Models.Sesshin>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="clearfix my-2">
    @if ((await AuthorizationService.AuthorizeAsync(
         User, new Product(),
         UserOperations.Create)).Succeeded)
    {
        <a asp-action="Create" class="btn btn-primary float-right">Create New</a>
    }
</div>
<div class="table-responsive">
    <table class="table table-striped table-dark">
        <thead>
            <tr class="table-primary">
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AppUserId)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td app-user-id="@item.AppUserId">
                    </td>
                    <td>
                        @if ((await AuthorizationService.AuthorizeAsync(
                           User, item,  
                           UserOperations.Update)).Succeeded)
                        {
                            <a asp-action="Edit" asp-route-id="@item.SesshinId" class="btn btn-sm btn-primary ml-1">Edit</a>
                        }
                        @if ((await AuthorizationService.AuthorizeAsync(
                        User, item,
                        UserOperations.Read)).Succeeded)
                        {
                            <a asp-action="Details" asp-route-id="@item.SesshinId" class="btn btn-sm btn-primary ml-1">Details</a>
                        }
                        @if ((await AuthorizationService.AuthorizeAsync(
                          User, item,
                          UserOperations.Delete)).Succeeded)
                        {
                            <a asp-action="Delete" asp-route-id="@item.SesshinId" class="btn btn-sm btn-primary ml-1">Delete</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
